local function Notify(msg)
    task.spawn(function()
        local n = Instance.new("TextLabel", sg)
        n.Size = UDim2.new(0, 280, 0, 35)
        n.Position = UDim2.new(0.5, -140, 0.15, 0)
        n.BackgroundColor3 = Color3.fromRGB(15, 15, 15)
        n.TextColor3 = THEME_COLOR
        n.Text = msg:upper()
        n.Font = Enum.Font.GothamBold
        n.TextSize = 13
        Instance.new("UICorner", n)
        local ns = Instance.new("UIStroke", n)
        ns.Color = THEME_COLOR
        task.wait(3)
        n:Destroy()
    end)
end

-----------------------------------------------------------
-- L√ìGICA DE BUSCA E SCANNER
-----------------------------------------------------------
local function CreateESP(object, name)
    if object:FindFirstChild("FruitESP") then return end
    local billboard = Instance.new("BillboardGui", object)
    billboard.Name = "FruitESP"
    billboard.AlwaysOnTop = true
    billboard.Size = UDim2.new(0, 100, 0, 50)
    local text = Instance.new("TextLabel", billboard)
    text.Size = UDim2.new(1, 0, 1, 0)
    text.BackgroundTransparency = 1
    text.Text = "üçé " .. name:gsub("Fruit", ""):upper()
    text.TextColor3 = THEME_COLOR
    text.Font = Enum.Font.GothamBold
    text.TextSize = 14
end

local function IsAFruit(obj)
    if (obj:IsA("Tool") or obj:IsA("Model")) then
        if obj.Name:find("Fruit") or obj:FindFirstChild("Handle") then
            if not obj:FindFirstAncestorOfClass("Model"):FindFirstChild("Humanoid") then
                return true
            end
        end
    end
    return false
end

local function ScanForFruits()
    local found = {}
    for _, v in ipairs(workspace:GetChildren()) do
        if IsAFruit(v) then
            table.insert(found, v)
        end
    end
    return found
end

local function ServerHop()
    StatusLabel.Text = "BUSCANDO SERVIDOR..."
    Notify("TROCANDO DE SERVIDOR...")
    task.wait(1)
    local success, content = pcall(function() 
        return game:HttpGet("https://games.roblox.com/v1/games/" .. game.PlaceId .. "/servers/Public?sortOrder=Asc&limit=100") 
    end)
    if success then
        local servers = HttpService:JSONDecode(content)
        for _, s in pairs(servers.data) do
            if s.playing < s.maxPlayers and s.id ~= game.JobId then
                TeleportService:TeleportToPlaceInstance(game.PlaceId, s.id, player)
                return
            end
        end
    end
end

-----------------------------------------------------------
-- LOOP DE EXECU√á√ÉO
-----------------------------------------------------------
task.spawn(function()
    StatusLabel.Text = "CARREGANDO MAPA (AGUARDE 5S)..."
    task.wait(5)
    
    while true do
        StatusLabel.Text = "ESCANEANDO AREA..."
        local fruits = ScanForFruits()
        
        if #fruits > 0 then
            for _, f in ipairs(fruits) do
                local fruitName = f.Name
                CreateESP(f, fruitName)
                
                StatusLabel.Text = "COLETANDO: " .. fruitName:upper()
                Notify("FRUTA ENCONTRADA!")
                
                if player.Character and player.Character:FindFirstChild("HumanoidRootPart") then
                    player.Character.HumanoidRootPart.CFrame = f:GetPivot()
                end
                
                task.wait(2) -- Tempo para o jogo registrar a coleta
                
                StatusLabel.Text = "ARMAZENANDO: " .. fruitName:upper()
                pcall(function()
                    local storeRemote = ReplicatedStorage:FindFirstChild("CommF_", true)
                    if storeRemote then
                        storeRemote:InvokeServer("StoreFruit", fruitName, f)
                    end
                end)
                Notify("FRUTA PROCESSADA!")
                task.wait(1)
            end
        else
            StatusLabel.Text = "NADA ENCONTRADO. TROCANDO EM 5S..."
            task.wait(5)
            ServerHop()
        end
        task.wait(2)
    end
end)
